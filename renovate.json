{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekly",
    "group:allNonMajor",
    "npm:unpublishSafe"
  ],
  "labels": ["renovate"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "description": "Automerge non-major updates",
      "automerge": true
    },
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    }
  ]
}
